<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_new_kid">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/nux_grey_button"
            android:typeface="serif"
            android:textSize="18dp"
            android:gravity="left"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:typeface="serif"
            android:text="Yifei Chen"
            android:textSize="22dp"
            android:id="@+id/text_name"
            android:layout_gravity="center_horizontal"
            android:background="@color/blue_light"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friends"
            android:textColor="@color/nux_grey_button"
            android:typeface="serif"
            android:textSize="18dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:typeface="serif"
            android:text="Yezhuo Zhu, Yaqing Xu"
            android:textSize="22dp"
            android:id="@+id/text_friend"
            android:layout_gravity="center_horizontal"
            android:background="@color/blue_light"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Applications\nTouch to download"
            android:typeface="serif"
            android:textColor="@color/nux_grey_button"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/appsBy" />
        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="20dp"
            android:id="@+id/mainListView">
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="475dp"
        android:orientation="vertical">




    </LinearLayout>
</LinearLayout>