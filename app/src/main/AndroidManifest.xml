<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yifei.appstoreclient" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.y3.appstoreclient.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.y3.appstoreclient.RegisterActivity"
            android:label="Register" >
        </activity>
        <activity
            android:name="com.y3.appstoreclient.UserActivity"
            android:label="User Info" >
        </activity>
        <activity
            android:name="com.y3.appstoreclient.AppsByFriendsActivity"
            android:label="@string/title_activity_apps_by_friends" >
        </activity>
    </application>

</manifest>
